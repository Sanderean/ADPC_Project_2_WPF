<Window x:Class="ADPC_Project_2_WPF.FileChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Choice" Height="200" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" FontSize="16" TextWrapping="Wrap">
            Do you have files already loaded?
        </TextBlock>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical" Margin="0,30,0,0">
            <Button Content="Skip Scraping and Load Data" Width="200" Height="40" Click="OnSkipScrapingClick" Margin="0,0,0,10"/>
            <Button Content="Scrape All Files and Load Data" Width="200" Height="40" Click="OnScrapeAndLoadClick"/>
        </StackPanel>
    </Grid>
</Window>
